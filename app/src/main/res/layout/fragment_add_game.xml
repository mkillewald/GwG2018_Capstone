<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        tools:context=".game.AddGameFragment">

        <android.support.constraint.Guideline
            android:id="@+id/gl_vertical_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52"/>

        <EditText
            android:id="@+id/et_game_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/game_name"
            android:inputType="text"
            android:maxLines="1"
            android:lines="1"
            android:imeOptions="actionDone"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_marginStart="@dimen/edit_text_margin"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginEnd="@dimen/edit_text_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="@dimen/margin"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_game_name"
            android:text="@string/type_label" />

        <Spinner
            android:id="@+id/spinner_game_type"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/game_type"
            android:prompt="@string/select_game_type"
            android:spinnerMode="dropdown"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/tv_type_label"
            app:layout_constraintLeft_toLeftOf="@id/tv_type_label"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_center"
            app:layout_constraintRight_toLeftOf="@id/gl_vertical_center"
            app:layout_constraintTop_toBottomOf="@id/tv_type_label" />

        <TextView
            android:id="@+id/tv_cabinet_label"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_center"
            app:layout_constraintLeft_toRightOf="@id/gl_vertical_center"
            app:layout_constraintTop_toTopOf="@id/tv_type_label"
            android:text="@string/cabinet_label"/>

        <Spinner
            android:id="@+id/spinner_game_cabinet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/game_cabinet"
            android:prompt="@string/select_game_cabinet"
            android:spinnerMode="dropdown"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_center"
            app:layout_constraintLeft_toRightOf="@id/gl_vertical_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cabinet_label" />

        <TextView
            android:id="@+id/tv_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="@dimen/margin"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_game_type"
            android:text="@string/status_label" />

        <Spinner
            android:id="@+id/spinner_game_working"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/game_working"
            android:prompt="@string/select_game_working"
            android:spinnerMode="dropdown"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_center"
            app:layout_constraintRight_toLeftOf="@id/gl_vertical_center"
            app:layout_constraintTop_toBottomOf="@id/tv_status_label"/>

        <TextView
            android:id="@+id/tv_ownership_label"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_center"
            app:layout_constraintLeft_toRightOf="@id/gl_vertical_center"
            app:layout_constraintTop_toTopOf="@id/tv_status_label"
            android:text="@string/ownership_label"/>

        <Spinner
            android:id="@+id/spinner_game_ownership"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/game_ownership"
            android:prompt="@string/select_game_ownership"
            android:spinnerMode="dropdown"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_center"
            app:layout_constraintLeft_toRightOf="@id/gl_vertical_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ownership_label"/>

        <TextView
            android:id="@+id/tv_monitor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="@dimen/margin"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_game_working"
            android:text="@string/monitor_label" />

        <TextView
            android:id="@+id/tv_monitor_details"
            style="?android:attr/spinnerItemStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ib_monitor_details_arrow"
            app:layout_constraintRight_toLeftOf="@id/ib_monitor_details_arrow"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/tv_monitor_label"
            android:text="@string/select_game_monitor"/>

        <ImageView
            android:id="@+id/ib_monitor_details_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_drop_down_24dp"
            android:paddingRight="12dp"
            app:layout_constraintStart_toEndOf="@id/tv_monitor_details"
            app:layout_constraintLeft_toRightOf="@id/tv_monitor_details"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_center"
            app:layout_constraintRight_toLeftOf="@id/gl_vertical_center"
            app:layout_constraintTop_toTopOf="@id/tv_monitor_details"
            app:layout_constraintBottom_toBottomOf="@id/tv_monitor_details"
            android:contentDescription="@string/select_game_monitor_details"/>

        <TextView
            android:id="@+id/tv_condition_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:paddingLeft="@dimen/spinner_label_padding"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_center"
            app:layout_constraintLeft_toRightOf="@id/gl_vertical_center"
            app:layout_constraintTop_toTopOf="@id/tv_monitor_label"
            android:text="@string/condition_label" />

        <Spinner
            android:id="@+id/spinner_game_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/game_condition"
            android:prompt="@string/select_game_condition"
            android:spinnerMode="dropdown"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_center"
            app:layout_constraintLeft_toRightOf="@id/gl_vertical_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition_label"/>

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            app:layout_constraintTop_toBottomOf="@id/spinner_game_condition"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"/>

        <Button
            android:id="@+id/btn_delete"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_game"
            app:layout_constraintTop_toBottomOf="@id/spinner_game_condition"
            app:layout_constraintEnd_toStartOf="@id/btn_save"/>

        <Button
            android:id="@+id/btn_save"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spinner_game_condition"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>